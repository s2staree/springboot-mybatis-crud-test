<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.orders.OrdersDao">

	<select id="findById"
		resultType="site.metacoding.firstapp.domain.orders.Orders">
	</select>

	<select id="findAll"
		resultType="site.metacoding.firstapp.domain.orders.Orders">
		SELECT *
		FROM orders
		WHERE user_id = #{userId}
	</select>

	<insert id="insert">
		INSERT INTO orders(user_id, order_user_name, product_id, order_product_name, 
		order_product_price, order_product_qty, created_at)
		VALUES(#{userId}, #{orderUserName}, #{productId}, #{orderProductName}, 
		#{orderProductPrice}, #{orderProductQty}, NOW())
	</insert>

	<update id="update">
	</update>

	<delete id="deleteById">
		DELETE FROM orders
		WHERE order_id = #{orderId}
	</delete>

</mapper>