<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.user.UserDao">

	<insert id="join">
		INSERT INTO user (user_name, user_password,
		user_email, created_at)
		VALUES (#{userName}, #{userPassword},
		#{userEmail}, NOW())
	</insert>

	<select id="login"
		resultType="site.metacoding.firstapp.domain.user.User">
		SELECT *
		FROM user
		WHERE user_name = #{userName}
		AND user_password = #{userPassword}
	</select>

	<select id="logout"
		resultType="site.metacoding.firstapp.domain.user.User">
	</select>

	<select id="findAll"
		resultType="site.metacoding.firstapp.domain.user.User">
		SELECT *
    	FROM user
	</select>

	<select id="findByRole"
		resultType="site.metacoding.firstapp.domain.user.User">
		SELECT *
      	FROM user
		WHERE user_role = 'customer'
	</select>

	<select id="findById" resultType="site.metacoding.firstapp.domain.user.User">
		SELECT *
      	FROM user
		WHERE user_id = #{userId}
	</select>

	<update id="update">
		UPDATE user
		SET user_name = #{userName},
		user_password = #{userPassword},
		user_email = #{userEmail},
		user_role = #{userRole}
		WHERE user_id = #{userId}
	</update>

	<delete id="deleteById">
		DELETE FROM user 
		WHERE user_id = #{userId}
	</delete>

</mapper>